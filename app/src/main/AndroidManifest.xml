<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="web.id.wahyou.movieq">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" tools:node="remove" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieQ.NoActionBar">
        <activity android:name=".ui.favorite.FavoriteActivity"
            android:theme="@style/Theme.MovieQ.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.tvshow.toprated.TopRatedTvShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.tvshow.popular.PopularTvShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.tvshow.airingtoday.AiringTodayTvShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.search.tvshow.SearchTvShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.search.movie.SearchMovieActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.movie.toprated.TopRatedMovieActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.movie.popular.PopularMovieActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.movie.upcoming.UpcomingMovieActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.tvshow.detail.DetailTvShowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.movie.detail.DetailMovieActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.MovieQ.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>